# Mainnet profile (hardened)
DEPLOY_ENV=mainnet
RPC_URL=https://mainnet.infura.io/v3/YOUR_KEY
CHAIN_ID=1

# Production PoolManager address
POOL_MANAGER_ADDRESS=0x0000000000000000000000000000000000000001

# Mandatory for production custody: set to Safe/multisig owner.
HOOK_OWNER=0x0000000000000000000000000000000000000002

# Hardened deploy path:
# - Use hardware wallet signing (recommended)
DEPLOY_USE_LEDGER=true
DEPLOY_SENDER=0xYOUR_LEDGER_ADDRESS

# Keep private-key deploy disabled by default on mainnet.
DEPLOYER_PRIVATE_KEY=
ALLOW_MAINNET_PRIVATE_KEY=false

ENABLE_VERIFY=true
ETHERSCAN_API_KEY=YOUR_EXPLORER_API_KEY

# Optional post-deploy smoke configuration (if policy allows on production)
HOOK_ADDRESS=
SMOKE_PRIVATE_KEY=
UPDATER_ADDRESS=
